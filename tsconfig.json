{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "examples/**/*"
  ],
  "exclude": ["node_modules"]
}